{
  "name": "ChatMessage",
  "type": "object",
  "properties": {
    "conversation_id": {
      "type": "string",
      "description": "Unique ID for the conversation between two users"
    },
    "sender_email": {
      "type": "string",
      "description": "Email of message sender"
    },
    "receiver_email": {
      "type": "string",
      "description": "Email of message receiver"
    },
    "message": {
      "type": "string",
      "description": "Message content"
    },
    "sender_name": {
      "type": "string",
      "description": "Name of sender"
    },
    "is_read": {
      "type": "boolean",
      "default": false,
      "description": "Whether message has been read"
    }
  },
  "required": [
    "conversation_id",
    "sender_email",
    "receiver_email",
    "message"
  ]
}
